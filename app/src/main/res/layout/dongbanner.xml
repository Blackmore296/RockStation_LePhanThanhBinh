<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_background_banner"
        android:textIsSelectable="true" />

    <ImageView
        android:id="@+id/imagebackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:textIsSelectable="true" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignBottom="@id/imagebackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageviewbanner"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textIsSelectable="true"/>


        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text=""
            android:textSize="17dp"
            android:id="@+id/textviewtitlebannerbaihat"
            android:layout_toRightOf="@id/imageviewbanner"
            android:layout_alignTop="@id/imageviewbanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewtitlebannerbaihat"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/imageviewbanner"
            android:textIsSelectable="true">

            <TextView
                android:id="@+id/textviewnoidung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:text="Top Hits Of Deep Purple"
                android:textColor="#fffdfc"
                android:textIsSelectable="true"
                android:textSize="13sp" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>