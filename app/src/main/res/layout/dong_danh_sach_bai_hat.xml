<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background_play_nhac">

        <TextView
            android:id="@+id/textviewdanhsachindex"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="1"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textviewtenbaihat"
            android:textSize="17sp"
            android:text=""
            android:textColor="#FFFAFA"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:singleLine="true"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxWidth="250dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:textSize="16sp"
            android:textColor="#979292"
            android:singleLine="true"
            android:ellipsize="end"

            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:layout_below="@id/textviewtenbaihat"
            android:id="@+id/textviewtencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/iconlove"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/imageviewluotthichdanhsachbaihat"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>