<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/custom_background_play_nhac"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="#ffff"
            android:text="1"
            android:layout_margin="10dp"
            android:id="@+id/textviewplaynhacindex"
            android:layout_width="28dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14sp"
            android:textColor="#ffff"
            android:text="Ten ca khuc"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textviewplaynhacindex"

            android:id="@+id/textviewplaynhactenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="13sp"
            android:textColor="#ffff"
            android:text="ca si"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textviewplaynhacindex"

            android:layout_below="@id/textviewplaynhactenbaihat"
            android:id="@+id/textviewplaynhactencasi"
            android:layout_width="wrap_content"
            android:layout_height="23dp" />
    </RelativeLayout>

</RelativeLayout>